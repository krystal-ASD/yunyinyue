/* pages/rankSong/rankSong.wxss */
.official {
  margin-top: 30rpx;
}
.officialTitle {
  font-weight: 600;
}
.officialItem {
  display: flex;
  
}
.officialItem image {
  height: 250rpx;
  width: 250rpx;
  border-radius: 40rpx;
  margin: 20rpx;
  flex: 3;
}
.ranksong {
  
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 20rpx;
  flex: 7;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.ranksongName {
  
  overflow: hidden;
  font-size: 32rpx;
  color: grey;
  margin: 20rpx;
  
}

/*全球榜*/
.global {
  margin-top: 30rpx;
}
.globalTitle {
  font-weight: 600;
}
.globalWhole {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx;
}
.globalItem {
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  margin: 20rpx;
  width: 200rpx;
}
.globalItem image {
  height: 200rpx;
  width: 200rpx;
  border-radius: 30rpx;
}
.globalItem text {
  display: block;
  width: 200rpx;
  
     
}
