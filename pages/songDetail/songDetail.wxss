/* pages/songDetail/songDetail.wxss */
.songDetailContainer {
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.8;
}
.songDetailName {
  color: #f5f5f5;
  font-size: 32rpx;
}
.needle {
  position: relative;
  z-index: 99;
  left: 60rpx;
  width: 200rpx;
  height:250rpx;
  transform-origin: 40rpx 0;     /*旋转点*/
  transform: rotate(-20deg);    /*旋转角度*/
  transition: transform 1s;     /*旋转过渡1s*/
}
.needNoplay {
  transform: rotate(0deg);
}
.trayContainer {
  position: relative;
  top: -100rpx;
  width: 500rpx;
  height: 500rpx;
}
.trayAction {
  animation: tray 4s linear infinite;  /*过度曲线：linear  平滑过渡     infinite无限循环*/
  animation-delay: 1s; /*摇杆1s放下  延迟一秒等摇杆放下开始转*/
}
@keyframes tray {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
.trayimg {
  width: 500rpx;
  height:500rpx;
}
.titleImg {
  position: absolute;
  top: 82rpx;
  left: 80rpx;
  width: 340rpx;
  height: 340rpx;
  border-radius: 50%;
}
/*喜欢评论*/
.tableDetail {
  display: flex;

}
.icon-xihuan, .icon-liebiao {
  font-size: 65rpx;
  margin: 20rpx 60rpx; 
}
.xihuan {
  color: red;
}
/*进度条*/
.progressBar {
  position: relative;
  display: flex;
  height: 100rpx;
  width: 660rpx;
  
  align-items: center;
  color: rgba(255,255,255,0.3);
  font-size: 32rpx;
  
}
.start {
  position: absolute;
  left: 0;
  
}
.progressTitle {
  flex: 0.9;
}
.finish {
  position: absolute;
  right: 0;
  
}
/*播放*/
.boderDetail text {
  display: inline-block;
  font-size: 65rpx;
  margin: 20rpx 40rpx;
}
/*播放列表*/
.playListContainer {
  position: absolute;
  top: 815rpx;
  transform: translate(0, 100%);
  /*transform: translate(0, 100%);*/
  /*为100%隐藏   为0显示*/
  width: 90%;
  background: #f5f5f5;
  border-radius: 30rpx;
  z-index: 1000;
}
.playList {
  height: 370rpx;
  display: flex;
  justify-content: flex-start;
}
.playTitle {
  font-weight: 1000;
  font-size: 40rpx;
  margin: 40rpx;
}
.playListItem {
  margin-left: 40rpx;
  display: flex;
  height: 80rpx;
}
.playListname {
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 40rpx;
}
.gangGang {
  height: 80rpx;
  line-height: 80rpx;
}
.playListauthor {
  font-size: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: grey;
}
.blackMask {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.3);
  top: 0;
  left: 0;
  z-index: 100;
  display: none;
}
/*是否显示遮罩层*/
.blackMaskShow {
  opacity:1;
  display: block;
}
