<!--pages/personal/personal.wxml-->
<view class="personContainer">
  <view class="personLogin">
    <image class="background" src="/static/images/personal/bgImg2.jpg"></image>

    <view class="user" bindtap="gotoLogin">
      <image class="user-img" src='{{userInfo.avatarUrl?userInfo.avatarUrl: "/static/images/personal/missing-face.png"}}'></image>
      <text class="user-name">{{userInfo.nickname?userInfo.nickname:'游客'}}</text>
    </view>

    <!--会员盒子-->
    <view class="vip-box">
      <image class="card-bg" src="/static/images/personal/vip-card-bg.png"></image>
      <text class="vip-rank">尊享会员</text>
      <view class="vip-btn">立即开通</view>
      <text class="vip-yunyinyue">enjoy music</text>
      <text class="vip-title">爱音乐，爱生活</text>
    </view>
    
  </view>



  <view class="coverContainer">
    <image class="huxian" src="/static/images/personal/arc.png"></image>
    <!--图标内容-->
    <view class="nav-main">
      <view class="nav-item"  hover-class="common-hover"  hover-stay-time="50">
        <text class="iconfont icon-xiaoxi"></text>
        <text class="icon-content">我的消息</text>
      </view>
      <view class="nav-item"   hover-class="common-hover" hover-stay-time="50">
        <text class="iconfont icon-haoyou"></text>
        <text class="icon-content">我的好友</text>
      </view>
      <view class="nav-item"  hover-class="common-hover"  hover-stay-time="50">
        <text class="iconfont icon-zhuye"></text>
        <text class="icon-content">个人主页</text>
      </view>
      <view class="nav-item" hover-class="common-hover"  hover-stay-time="50">
        <text class="iconfont icon-huanfu"></text>
        <text class="icon-content">个性装扮</text>
      </view>
    </view>
  </view>
   

    <!-- 个人列表 -->
    <view class="cardList">
      <view class="card-item">
          <text class="personalTitle">最近播放</text>
          <text class="personalMore"> > </text>
      </view>
      <view class="card-item">
          <text class="personalTitle">我的音乐</text>
          <text class="personalMore"> > </text>
      </view>
      <view class="card-item">
          <text class="personalTitle">我的收藏</text>
          <text class="personalMore"> > </text>
      </view>
      <view class="card-item">
          <text class="personalTitle">我的电台</text>
          <text class="personalMore"> > </text>
      </view>  
    </view>

    

</view>