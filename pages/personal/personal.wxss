/* pages/personal/personal.wxss */

.background {
  position: absolute;
  opacity: 0.7;
  filter: blur(1px);
}
/*登录*/
.user {
  display: flex;
  align-items: center;
  position: relative;
  top: 100rpx;
}
.user-img {
  height: 120rpx;
  width: 120rpx;
  margin: 30rpx;
}
/*会员盒子*/
.vip-box {
  
  height: 280rpx;
  
  background: linear-gradient(left, red, black);
  background: rgba(0, 0, 0, .7); 
  position: relative;
  top: 110rpx;
  margin: 0 20rpx;
  border-radius: 40rpx;
  
  
  
}
.vip-btn {
  display: inline;
  background: #f9e6af;
  padding: 5rpx 18rpx;
  border-radius: 20rpx;
  font-size: 30rpx;

  position: relative;
  top: 23rpx;
  left: 400rpx;
}
.vip-rank {
  color: #f7d680;
  font-size: 32rpx;
  margin: 20rpx;
  
}
.vip-yunyinyue, .vip-title {
  display: block;
  margin: 20rpx;
  color: #f7d680;
}

.vip-title {
  font-size: 32rpx;
}
.card-bg {
  width: 380rpx;
  height: 260rpx;
  float: right;
}
.huxian {
  width: 100%;
  height: 60rpx;
  position: relative;
  top: 10rpx;
  z-index: 2;
}
/*图标导航*/
.nav-main {
  
  display: flex;
  justify-content: space-around;
  background: #fff;
  border-radius: 20rpx;
  z-index: 2;
}
.nav-item {
  height:150rpx;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  background: #f5f5f5;
  z-index: 2;
}
.nav-item .iconfont {
  font-size: 60rpx;
  color: #d43c33;
}
.icon-content {
  font-size: 28rpx;
}

/*个人列表*/
.cardList {
  margin-top: 30rpx;
}
.card-item {
  background: #f5f5f5;
  margin: 0 20rpx;
  padding: 20rpx;
}
.personalTitle {
  font-size: 32rpx;
}
.personalMore {
  float: right;
}