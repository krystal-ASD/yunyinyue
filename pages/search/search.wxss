/* pages/search/search.wxss */
.inSearch {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  height: 80rpx;
}
.icon-search {
  color: #dc2c1f;
  font-size: 40rpx;
  line-height: 80rpx;
  margin: 0 20rpx;
}
.placeholder {
  border-bottom: 1rpx solid #dc2c1f;
  width: 100%;
  line-height: 80rpx;
  margin: 0 20rpx;
}
.cleanInput {
  font-size: 65rpx;
  font-weight: 300;
  position: absolute;
  right: 30rpx;
  color: grey;
}
/*历史*/
.historyContainer {
  display: flex;
  height: 80rpx;
  position: relative;
}
.historyTitle {
  font-size: 32rpx;
  line-height: 80rpx;
  margin: 0 20rpx;
  font-weight: 600;
}
.deleteHistory {
  font-size: 60rpx;
  line-height: 80rpx;
  position: absolute;
  right: 0;
  color: grey;
  margin: 0 30rpx;
}

.hotTitle {
  font-size: 32rpx;
  font-weight: 600;
  margin: 30rpx;
  margin-top: 0;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 3rpx solid grey;
}
.hotList {
  margin: 30rpx;
  display: flex;
  flex-wrap: wrap;
}
.hotListItem {
  width: 50%;
  padding: 13rpx 0;
}
.hotCount {
    color: #dc2c1f;
    font-size: 28rpx;
    padding-right: 20rpx;
}
.hotSongName {
  font-size: 28rpx;
}
.iconImg {
  width: 35rpx;
  height: 20rpx;
  margin-left: 20rpx;
}
/*搜索关键字显示*/
.keywordItem {
  height: 80rpx;
}
.keyName {
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
}
/*搜索结果分类*/
.searchTable {
  width: 100%;  
  border-bottom: 2rpx solid #eee;  
  text-align: center;  
  height: 80rpx;
  background:	#E1FFFF;
  
}

.tableItem {
  display: inline-block;
  height: 80rpx;
  width: 49.5%;
  color: grey;
  line-height: 80rpx;
  font-size: 32rpx;
}
.on {
  color: black;
  border-bottom: 5rpx solid red;
}
/*搜索结果列表*/
.searchResultList {
  display: flex;
  flex-direction: column;
  height: 2350rpx;
  margin: 25rpx 20rpx;
}

.resultItem {
  height: 140rpx;
  
  display: flex;
  flex-direction: column;
 

}
.resultName {
  font-size: 32rpx;
  margin-bottom: 15rpx;
}

.resultAuthor {
  color:rgb(150, 150, 150);
  font-size:24rpx;
}
/*歌单列表*/

.slItem {
  display: flex;
}
.slItem image {
  height: 150rpx;
  width: 150rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
}
.textItem {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin: 30rpx;
  
}
.sltName {
  margin-bottom: 30rpx;
  font-size: 32rpx;
  color: grey;
  
}
.slTitle {
  font-size: 26rpx;
  color: rgb(53, 112, 136);
}


